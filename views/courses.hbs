<div class="row">
  <div class="col-md-12">
    <br>
    <h2>Students</h2>
    <hr />
    <a href="/addcourse" class="btn btn-success float-right">Add New Course</a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Course Code</th>
                            <th>Course Description</th>
                            <th>Delete Course</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each courses}}
                            <tr>
                                <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
                                <td>{{this.courseDescription}}</td>
                                <td>
                                    <a href="/course/delete/{{this.courseId}}" class="btn btn-danger">Remove</a>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
    </div>
    {{#unless courses}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
    {{/unless}}
</div>
